---
// Laden und injizieren Sie './global.css' auf der Seite
import "../styles/global.css";
import AppleTouchIcons from "../components/AppleTouchIcons.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Click from "../components/Click.astro";

const { title, description, keywords } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- <link rel="canonical" href="https://musikstudio-ziebart.de/" /> -->
    <!-- <link rel="stylesheet" href="/src/styles/global.css" /> -->
    <!-- <link rel="icon" href="icons/favicon.ico" /> -->
    <link rel="manifest" href="/manifest.json" />
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=G-66Z7DSTCPC"></script> -->

    <!-- <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", "G-66Z7DSTCPC");
        gtag("config", "AW-93825274");
    </script> -->

    <!-- de = deutschsprachig -->
    <meta name="Language" content="de" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta
      name="author"
      content="Rudi Ziebart, postmaster@musistudio-ziebart.de"
    />
    <meta
      name="DC.Publisher"
      content="Rudi Ziebart, postmaster@musikstudio-ziebart.de"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="DC.date" content="Collection" />
    <meta name="DC.rights" content="Alle Rechte liegen beim Author" />
    <meta name="robots" content="selektion" />
    <meta name="revisit-after" content="7 days" />
    <meta name="robots" content="max-snippet:-1" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#191919" />
    <title>{title}</title>
    <AppleTouchIcons />
  </head>

  <body class="">

    <Header />
    <Click />

    <main>
      <slot />
    </main>

    <Footer />

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        if (localStorage.getItem("theme") == "invert") {
          document.querySelector("body").classList.add("invert");
        }

        if ("serviceWorker" in navigator) {
          navigator.serviceWorker
            .register("/serviceWorker.js", { scope: "/" })
            .then(() => console.log("serviceWorker registered"))
            .catch((error) => console.warn(error));
        }
      });
    </script>
    <script>
      console.log("Welcome, browser console!");
    </script>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-5F9WD6T"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
