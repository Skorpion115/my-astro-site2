---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Kontaktformular"
  description="Kostenloser Probeunterricht"
  keywords="Kontakt"
>
<h2>Contact Form</h2>
<form method="post" name="Contact Form 2" action="/thankyou/" data-netlify-recaptcha="true" data-netlify="true">
    <fieldset>
        <legend>Daten</legend>
    <input type="hidden" name="form-name" value="Contact Form 2">
<p>
    <label for="born">Geburtsdatum:</label>
    <input type="date" name="born" id="born">
</p>
<p>
    <label for="desired_date">Wunschtermin mit Uhrzeit:</label>
    <input type="datetime-local" name="desired_date" id="desired_date">
</p>
<p>
    <label for="phone">Telefonnummer:</label>
    <input type="tel" name="phone" id="phone" placeholder="Telefonnummer *">
</p>
<p>
    <label for="instrument">Instrument:</label>
    <input type="text" name="instrument" id="instrument">
</p>
<p>
    <label for="email">Email:</label>
    <input type="email" name="email" id="email">
</p>
<p>
    <label for="comments">Nachricht:</label><br/>
    <textarea name="comments" id="comments" cols="30" rows="10" placeholder="Wie kann ich Ihnen helfen? *"></textarea>
</p>
    </fieldset>
    <fieldset>
        <legend>Adresse</legend>
<p>
    <label for="fname">Vorname:</label>
    <input type="text" name="fname" id="fname" placeholder="Vorname *">
</p>
<p>
    <label for="lname">Nachname:</label>
    <input type="text" name="lname" id="lname" placeholder="Nachname *">
</p>
<p>
    <label for="street">Strasse:</label>
    <input type="text" name="street" id="street" maxlength="22">
</p>
<p>
    <label for="place">Ort:</label>
    <input type="text" name="place" id="place" maxlength="20">
</p>
<p>
    <label for="postal_code">Postleitzahl:</label>
    <input type="number" name="postal_code" id="postal_code" placeholder="Postleitzahl *">
</p>
    </fieldset>
    <fieldset>
<p>
    <label for="parents">Eltern:</label>
    <input type="text" name="parents" id="parents">
</p>
    </fieldset>
<div data-netlify-recaptcha="true"></div>
    
<p>
    <input type="submit">
</p>
</form>

</Layout>
