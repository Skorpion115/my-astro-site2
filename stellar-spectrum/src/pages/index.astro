    flex: 2;
  }

  .marchandise-2 {
    flex: 1;
  }

  .conteneur ul li {
    color: var(--color-white);
    background-color: var(--color-black);
    height: 3rem;
    box-shadow: 2px 2px 5px #666;
    margin-top: 15px;
    padding: 0.3rem 1.875rem;
    font-size: large;
    list-style-type: none;
  }

  .conteneur img {
    width: 90%;
    height: auto;
    max-width: 100%;
    margin-left: 0%;
    box-shadow: 2px 2px 5px #666;
  }

  a {
    text-decoration: none;
  }
</style>
